<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DBIntro.MyPage">

    <StackLayout Padding="0,40,0,0">
        <Button Text="Add User" Clicked="AddUser" />
        <Entry x:Name="name"/>
        <ListView x:Name="lv" HeightRequest="200"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Person Name"/>
            <Entry x:Name="perName" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Male?"/>
            <CheckBox x:Name="gender" IsChecked="True"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="DOB"/>
            <DatePicker x:Name="dob"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="SSN"/>
            <Entry x:Name="ssn" WidthRequest="100"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Income"/>
            <Entry x:Name="income" WidthRequest="100"/>
        </StackLayout>
        <Button Text="Add Person" Clicked="AddPerson" />
        <ListView x:Name="lv2" HeightRequest="200"/>
        <Button Text="Clear All" Clicked="ClearAll"/>
    </StackLayout>

</ContentPage>
