<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DXDLabs"
    x:Class="DXDLabs.ExecAboutPage"
    BackgroundImageSource="https://cdn.wallpapersafari.com/19/23/z7MdVL.jpg">
    <StackLayout Padding="20, 50, 20, 50">
        <Label x:Name="ExecName" FontSize="Title" TextColor="White" Margin="5"/>
        <BoxView Color="#35c5d5" HeightRequest="10" CornerRadius="5"/>
        <Label x:Name="ExecPos" FontSize="Header" TextColor="White" Margin="5"/>
        <Image x:Name="ExecHeadShot" HeightRequest="330" VerticalOptions="CenterAndExpand">
            <Image.Clip>
                <EllipseGeometry RadiusX="120" RadiusY="120" Center="170,170"/>
            </Image.Clip>
        </Image>
        <Button VerticalOptions="End" Text="Instagram" TextColor="White" BackgroundColor="#35c5d5" Clicked="OnInstagram"/>
    </StackLayout>
</ContentPage>
