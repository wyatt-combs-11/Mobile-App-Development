<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DXDLabs"
    x:Class="DXDLabs.MindsetClubPage"
    BackgroundImageSource="https://cdn.wallpapersafari.com/19/23/z7MdVL.jpg">
    <StackLayout>
        <StackLayout HorizontalOptions="FillAndExpand" Padding="25">
        <Label Text="DXD Mindset Club" FontSize="36" TextColor="White" Margin="5"/>
        <BoxView Color="#35c5d5" HeightRequest="8" CornerRadius="5"/>
    </StackLayout>
        <Label x:Name="Quote" FontSize="24" HorizontalTextAlignment="Center" FontAttributes="Italic" HeightRequest="200" VerticalTextAlignment="Center" VerticalOptions="CenterAndExpand" Margin="50,0,0,0">
            <Label.Background>
                    <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                    <GradientStop Offset="0.0" Color="White"/>
                    <GradientStop Offset="1" Color="#35c5d5"/>
    </RadialGradientBrush>
            </Label.Background>
        </Label>
        <Button Text="Join Now" BackgroundColor="Black" TextColor="White" CornerRadius="60" Margin="127,10,127,50" Opacity="0.6" VerticalOptions="Center" HeightRequest="120" BorderColor="White" BorderWidth="4" FontAttributes="Bold" Clicked="MindsetClicked"/>
    </StackLayout>
</ContentPage>
