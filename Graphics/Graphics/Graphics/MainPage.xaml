<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Graphics.MainPage">

    <StackLayout Padding="0,40,0,0">
        <Entry x:Name="Red" Text="50" TextChanged="OnEntryChanged"/>
        <Entry x:Name="Blue" Text="500" TextChanged="OnEntryChanged"/>
        <skia:SKCanvasView x:Name="view1" PaintSurface="OnCanvas1ViewPaintSurface"
                           HeightRequest="400" WidthRequest="160"/>
    </StackLayout>
</ContentPage>
